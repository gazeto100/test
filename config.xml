<?xml version='1.0' encoding='utf-8'?>
<widget id="com.andy.blackjack" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>BlackJack</name>
  <description>
      BlackJack free Game.
  </description>
  <author email="andrei_terziev@abv.bg" href="http://cordova.io">
      Andrei Terziev
  </author>
  <content src="index.html" />
   <preference name="EnableViewportScale" value="false" />
   <!-- <preference name="StatusBarOverlaysWebView" value="true" /> -->
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <preference name="fullscreen" value="true" />
  <!--<preference name="HideKeyboardFormAccessoryBar" value="true"/> -->
  <!--<preference name="WebViewBounce" value="true" /> -->
  <!-- <preference name="StatusBarOverlaysWebView" value="true" /> -->
  <access origin="*" />
     <preference name="Orientation" value="portrait" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
      <allow-intent href="market:*" />
  </platform>
     <plugin name="phonegap-admob" source="npm"/>

  <platform name="android">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />
  </platform>
  <platform name="android">

	      
              <icon src="icons/ldpi.png" density="ldpi" />
              <icon src="icons/mdpi.png" density="mdpi" />
              <icon src="icons/hdpi.png" density="hdpi" />
              <icon src="icons/xhdpi.png" density="xhdpi" />
     </platform>

</widget> 
